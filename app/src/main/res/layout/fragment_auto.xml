<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_auto_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fragment_auto_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        app:fab_colorNormal="@color/accent"
        app:fab_shadowRadius="10dp"
        app:fab_showShadow="true"
        app:fab_elevationCompat="4dp"
        app:fabSize="normal"
        android:padding="16dp"
        />

    <FrameLayout
        android:id="@+id/fragment_auto_mask_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/app_grey"
        android:alpha="0.7"
        android:visibility="gone"
        />

    <include
        android:id="@+id/fragment_auto_create_auto"
        layout="@layout/card_auto_create"
        android:visibility="gone"
        />

    <include
        android:id="@+id/fragment_auto_create_owner"
        layout="@layout/card_owner_create"
        android:visibility="gone"
        />



</FrameLayout>